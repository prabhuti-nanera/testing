@using Microsoft.AspNetCore.Components.Authorization
@using CRC.WebPortal.BlazorWebApp.Services
@inject AuthenticationStateProvider AuthStateProvider
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@implements IDisposable

<div class="user-profile-container">
    <AuthorizeView>
        <Authorized>
            <div class="dropdown">
                <button class="btn btn-link user-profile-btn" 
                        type="button" 
                        id="userProfileDropdown"
                        @onclick="ToggleDropdown"
                        @onclick:stopPropagation="true">
                    <div class="user-avatar">
                        <i class="bi bi-person-circle"></i>
                    </div>
                    <span class="user-name">@GetUserDisplayName(context.User)</span>
                    <i class="bi bi-chevron-down dropdown-arrow"></i>
                </button>
                
                <ul class="dropdown-menu dropdown-menu-end user-dropdown" 
                    aria-labelledby="userProfileDropdown"
                    style="display: @(isDropdownOpen ? "block" : "none")">
                    <li>
                        <div class="dropdown-header">
                            <div class="user-info">
                                <div class="user-avatar-large">
                                    <i class="bi bi-person-circle"></i>
                                </div>
                                <div class="user-details">
                                    <div class="user-name-large">@GetUserDisplayName(context.User)</div>
                                    <div class="user-email">@GetUserEmail(context.User)</div>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <button class="dropdown-item logout-btn" 
                                @onclick="HandleLogout"
                                @onclick:stopPropagation="true"
                                disabled="@isLoggingOut">
                            @if (isLoggingOut)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                <span>Signing out...</span>
                            }
                            else
                            {
                                <i class="bi bi-box-arrow-right me-2"></i>
                                <span>Sign Out</span>
                            }
                        </button>
                    </li>
                </ul>
            </div>
        </Authorized>
        <NotAuthorized>
            <!-- Show nothing when not authenticated -->
        </NotAuthorized>
    </AuthorizeView>
</div>

<style>
    .user-profile-container {
        position: relative;
        z-index: 1050;
    }

    .user-profile-btn {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 8px 12px;
        border: none;
        background: transparent;
        color: #495057;
        text-decoration: none;
        border-radius: 8px;
        transition: all 0.2s ease;
    }

    .user-profile-btn:hover {
        background-color: #f8f9fa;
        color: #495057;
        text-decoration: none;
    }

    .user-avatar {
        font-size: 24px;
        color: #6c757d;
    }

    .user-name {
        font-weight: 500;
        font-size: 14px;
        max-width: 120px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .dropdown-arrow {
        font-size: 12px;
        transition: transform 0.2s ease;
    }

    .user-profile-btn[aria-expanded="true"] .dropdown-arrow {
        transform: rotate(180deg);
    }

    .user-dropdown {
        min-width: 280px;
        border: 1px solid #dee2e6;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        padding: 0;
        margin-top: 8px;
    }

    .dropdown-header {
        padding: 16px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 12px 12px 0 0;
        margin: 0;
        border: none;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .user-avatar-large {
        font-size: 40px;
        color: white;
    }

    .user-details {
        flex: 1;
        color: white;
    }

    .user-name-large {
        font-weight: 600;
        font-size: 16px;
        margin-bottom: 2px;
    }

    .user-email {
        font-size: 13px;
        opacity: 0.9;
        word-break: break-all;
    }

    .dropdown-divider {
        margin: 0;
    }

    .logout-btn {
        display: flex;
        align-items: center;
        width: 100%;
        padding: 12px 16px;
        border: none;
        background: transparent;
        color: #dc3545;
        font-size: 14px;
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .logout-btn:hover {
        background-color: #f8f9fa;
        color: #dc3545;
    }

    .logout-btn:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    /* Mobile responsive */
    @@media (max-width: 768px) {
        .user-name {
            display: none;
        }
        
        .user-dropdown {
            min-width: 260px;
        }
    }
</style>

@code {
    private bool isDropdownOpen = false;
    private bool isLoggingOut = false;

    private void ToggleDropdown()
    {
        isDropdownOpen = !isDropdownOpen;
        StateHasChanged();
    }

    private string GetUserDisplayName(System.Security.Claims.ClaimsPrincipal user)
    {
        var firstName = user.FindFirst("FirstName")?.Value ?? "";
        var lastName = user.FindFirst("LastName")?.Value ?? "";
        
        if (!string.IsNullOrEmpty(firstName) && !string.IsNullOrEmpty(lastName))
        {
            return $"{firstName} {lastName}";
        }
        
        return user.FindFirst("email")?.Value?.Split('@')[0] ?? "User";
    }

    private string GetUserEmail(System.Security.Claims.ClaimsPrincipal user)
    {
        return user.FindFirst("email")?.Value ?? "";
    }

    private async Task HandleLogout()
    {
        if (isLoggingOut) return;

        try
        {
            isLoggingOut = true;
            isDropdownOpen = false; // Close dropdown immediately
            StateHasChanged();

            await AuthService.LogoutAsync();
            await Task.Delay(100); // Small delay to prevent event handler issues
            Navigation.NavigateTo("/signin", forceLoad: true);
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", "Logout failed:", ex.Message);
            isLoggingOut = false;
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        // No resources to dispose
    }
}
