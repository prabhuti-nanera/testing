@code {
    private SigninRequest signinData = new();
    private bool isLoading = false;

    private async Task HandleValidSubmit()
    {
        isLoading = true;

        try
        {
            // UI just calls the service like a function - clean separation
            var result = await AuthService.SignInAsync(signinData);
            
            if (result.IsSuccess)
            {
                // Show success toast notification
                await ToastService.ShowSuccessAsync("Sign in successful! Redirecting...", 3000);
                
                // Wait for toast visibility then navigate
                await Task.Delay(1500);
                
                // Navigate to home page
                Navigation.NavigateTo("/home", forceLoad: true);
            }
            else
            {
                // Show error toast notification
                await ToastService.ShowErrorAsync(
                    result.Message ?? "Invalid email or password. Please check your credentials and try again.", 
                    5000);
            }
        }
        catch (Exception)
        {
            // Show error toast for unexpected exceptions
            await ToastService.ShowErrorAsync("An error occurred while processing your request.", 5000);
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async void HandleInvalidSubmit()
    {
        // Show warning toast for form validation errors
        await ToastService.ShowWarningAsync("Please correct the errors in the form.", 4000);
        // Field-level ValidationMessages will also show specific errors
    }
    

}

