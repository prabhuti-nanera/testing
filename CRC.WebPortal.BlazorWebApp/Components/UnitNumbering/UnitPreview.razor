<div class="unit-preview">
    <div class="preview-header">
        <h6 class="mb-0"> Generated Units</h6>
        <div class="d-flex align-items-center gap-2">
            @if (Units.Any())
            {
                <div class="unit-count">
                    <span class="badge bg-primary">@Units.Count Units</span>
                </div>
            }
         
        </div>
    </div>

    @if (!Units.Any())
    {
        <div class="empty-state">
            <i class="fas fa-home fa-3x mb-3 text-muted"></i>
            <h6 class="text-muted">No Units Generated</h6>
            <p class="text-muted small">Configure buildings and patterns to see generated units here.</p>
       
        </div>
    }
    else
    {
        <!-- Building Filter -->
        <div class="building-filter mb-3">
            <label class="form-label text-muted small mb-1">
                <i class="fas fa-filter me-1"></i>Filter by Building
            </label>
            <select class="form-select form-select-sm" @bind="selectedBuilding" @bind:after="FilterUnits" title="Filter units by building">
                <option value="">All Buildings (@Units.Count)</option>
                @foreach (var building in GetAvailableBuildings())
                {
                    <option value="@building">@building (@GetUnitsCountForBuilding(building))</option>
                }
            </select>
        </div>

        <!-- Units Grid -->
        <div class="units-grid">
            @foreach (var unit in GetFilteredUnits())
            {
                <div class="unit-card" @onclick="() => SelectUnit(unit)">
                    <!-- Prominent Unit Number/Preview Result in Center -->
                    <div class="unit-number-prominent">
                        <div class="preview-result-label">Unit Number</div>
                        <div class="preview-result-number">@unit.UnitNumber</div>
                        <div class="unit-type-badge">@unit.UnitType</div>
                    </div>
                    
                    <!-- Unit Details -->
                    <div class="unit-details-compact">
                        <div class="unit-info">
                            <i class="fas fa-building text-muted me-1"></i>
                            <span class="unit-building">@unit.BuildingName</span>
                        </div>
                        <div class="unit-info">
                            <i class="fas fa-layer-group text-muted me-1"></i>
                            <span class="unit-floor">Floor @unit.FloorNumber</span>
                        </div>
                    </div>
                    
                    <!-- Actions -->
                    <div class="unit-actions">
                        <button type="button" class="btn btn-sm btn-outline-primary edit-btn" 
                                @onclick:stopPropagation="true"
                                @onclick="() => EditUnit(unit)" title="Edit Unit">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-danger delete-btn" 
                                @onclick:stopPropagation="true"
                                @onclick="() => DeleteUnit(unit)" title="Delete Unit">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </div>
                </div>
            }
        </div>

        <!-- Actions -->
        <div class="preview-actions mt-3">
            <div class="actions-container-compact">
                <!-- Remove Building Section -->
                <div class="action-section-compact">
                    <div class="d-flex align-items-center gap-2">
                        <label class="form-label small mb-0 text-muted">Remove Building:</label>
                        <select class="form-select form-select-sm" @bind="selectedBuildingForRemoval" 
                                title="Choose building to remove">
                            <option value="">Select building...</option>
                            @foreach (var building in GetAvailableBuildings())
                            {
                                <option value="@building">@building</option>
                            }
                        </select>
                        <button type="button" class="btn btn-outline-danger btn-sm" 
                                @onclick="ShowRemoveBuildingConfirmation" 
                                disabled="@(string.IsNullOrEmpty(selectedBuildingForRemoval))"
                                title="Remove building units">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </div>
                </div>
                
                <!-- Delete All Section -->
                <div class="action-section-compact">
                    <button type="button" class="btn btn-danger btn-sm" 
                            @onclick="ShowDeleteAllConfirmation" 
                            disabled="@(!Units.Any())"
                            title="Delete all units">
                        <i class="fas fa-trash-alt me-1"></i>Delete All
                    </button>
                </div>
            </div>
        </div>
    }
</div>

<!-- Edit Unit Modal -->
@if (editingUnit != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Unit</h5>
                    <button type="button" class="btn-close" @onclick="CancelEdit"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Unit Number</label>
                        <input type="text" class="form-control" @bind="editingUnit.UnitNumber" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Unit Type</label>
                        <input type="text" class="form-control" @bind="editingUnit.UnitType" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Floor Number</label>
                        <input type="number" class="form-control" @bind="editingUnit.FloorNumber" min="1" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelEdit">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveEdit">Save Changes</button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Remove Building Confirmation Modal -->
@if (showRemoveBuildingConfirmation)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Remove Building</h5>
                    <button type="button" class="btn-close" @onclick="CancelRemoveBuildingConfirmation"></button>
                </div>
                <div class="modal-body text-center">
                    <i class="fas fa-exclamation-triangle text-warning fa-3x mb-3"></i>
                    <p class="mb-2">Remove all units from <strong>@selectedBuildingForRemoval</strong>?</p>
                    <small class="text-muted">@GetUnitsCountForBuilding(selectedBuildingForRemoval) units will be removed</small>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelRemoveBuildingConfirmation">Cancel</button>
                    <button type="button" class="btn btn-warning" @onclick="ConfirmRemoveBuilding">
                        <i class="fas fa-building"></i> Remove Building Units
                    </button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Delete All Confirmation Modal -->
@if (showDeleteAllConfirmation)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete All</h5>
                    <button type="button" class="btn-close" @onclick="CancelDeleteAllConfirmation"></button>
                </div>
                <div class="modal-body text-center">
                    <i class="fas fa-trash-alt text-danger fa-3x mb-3"></i>
                    <p class="mb-2">Delete all <strong>@Units.Count units</strong>?</p>
                    <small class="text-muted">This action cannot be undone</small>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelDeleteAllConfirmation">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDeleteAll">
                        <i class="fas fa-trash-alt"></i> Delete All Units
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public List<CRC.WebPortal.Shared.Dtos.UnitDto> Units { get; set; } = new();
    [Parameter] public EventCallback<List<CRC.WebPortal.Shared.Dtos.UnitDto>> UnitsChanged { get; set; }
    [Parameter] public List<Models.CreateBuildingRequest> Buildings { get; set; } = new();
    [Parameter] public List<string> UnitTypes { get; set; } = new();
    [Parameter] public NumberingPatternBuilder.UnitNumberPatternConfig? PatternConfig { get; set; }
    [Parameter] public int ProjectId { get; set; }

    private string selectedBuilding = "";
    private string selectedBuildingForRemoval = "";
    private CRC.WebPortal.Shared.Dtos.UnitDto? editingUnit = null;
    private CRC.WebPortal.Shared.Dtos.UnitDto? selectedUnit = null;
    private bool showRemoveBuildingConfirmation = false;
    private bool showDeleteAllConfirmation = false;
    

    private List<string> GetAvailableBuildings()
    {
        return Units.Select(u => u.BuildingName).Distinct().OrderBy(b => b).ToList();
    }

    private List<CRC.WebPortal.Shared.Dtos.UnitDto> GetFilteredUnits()
    {
        var filtered = Units.AsEnumerable();
        
        if (!string.IsNullOrEmpty(selectedBuilding))
        {
            filtered = filtered.Where(u => u.BuildingName == selectedBuilding);
        }
        
        return filtered.OrderBy(u => u.BuildingName)
                      .ThenBy(u => u.FloorNumber)
                      .ThenBy(u => u.UnitNumber)
                      .ToList();
    }

    private void FilterUnits()
    {
        StateHasChanged();
    }

    private void SelectUnit(CRC.WebPortal.Shared.Dtos.UnitDto unit)
    {
        selectedUnit = selectedUnit?.Id == unit.Id ? null : unit;
    }

    private void EditUnit(CRC.WebPortal.Shared.Dtos.UnitDto unit)
    {
        editingUnit = new CRC.WebPortal.Shared.Dtos.UnitDto
        {
            Id = unit.Id,
            UnitNumber = unit.UnitNumber,
            UnitType = unit.UnitType,
            FloorNumber = unit.FloorNumber,
            BuildingName = unit.BuildingName,
            ProjectId = unit.ProjectId
        };
    }

    private void CancelEdit()
    {
        editingUnit = null;
    }

    private async Task SaveEdit()
    {
        if (editingUnit != null)
        {
            var index = Units.FindIndex(u => u.Id == editingUnit.Id);
            if (index >= 0)
            {
                Units[index] = editingUnit;
                await UnitsChanged.InvokeAsync(Units);
            }
            editingUnit = null;
        }
    }

    private async Task DeleteUnit(CRC.WebPortal.Shared.Dtos.UnitDto unit)
    {
        Units.Remove(unit);
        await UnitsChanged.InvokeAsync(Units);
    }

    // Building removal methods
    private void ShowRemoveBuildingConfirmation()
    {
        if (!string.IsNullOrEmpty(selectedBuildingForRemoval))
        {
            showRemoveBuildingConfirmation = true;
        }
    }

    private void CancelRemoveBuildingConfirmation()
    {
        showRemoveBuildingConfirmation = false;
    }

    private async Task ConfirmRemoveBuilding()
    {
        if (!string.IsNullOrEmpty(selectedBuildingForRemoval))
        {
            var unitsToRemove = Units.Where(u => u.BuildingName == selectedBuildingForRemoval).ToList();
            foreach (var unit in unitsToRemove)
            {
                Units.Remove(unit);
            }
            
            // Reset selection if the filtered building was removed
            if (selectedBuilding == selectedBuildingForRemoval)
            {
                selectedBuilding = "";
            }
            
            selectedBuildingForRemoval = "";
            showRemoveBuildingConfirmation = false;
            await UnitsChanged.InvokeAsync(Units);
        }
    }

    private int GetUnitsCountForBuilding(string buildingName)
    {
        return Units.Count(u => u.BuildingName == buildingName);
    }

    // Delete all methods
    private void ShowDeleteAllConfirmation()
    {
        showDeleteAllConfirmation = true;
    }

    private void CancelDeleteAllConfirmation()
    {
        showDeleteAllConfirmation = false;
    }

    private async Task ConfirmDeleteAll()
    {
        Units.Clear();
        selectedBuilding = "";
        selectedBuildingForRemoval = "";
        showDeleteAllConfirmation = false;
        await UnitsChanged.InvokeAsync(Units);
    }

    private void DeleteAllUnits()
    {
        ShowDeleteAllConfirmation();
    }

    // Removed CanGenerateUnits and GenerateUnits methods as requested

    private string GenerateUnitNumber(UnitNameDisplay row, int floor, int unit, NumberingPatternBuilder.UnitNumberPatternConfig config)
    {
        var unitNumber = "";
        
        // Process each digit based on the row's configuration
        var digitCount = row.OriginalDigitCount > 0 ? row.OriginalDigitCount : Math.Max(row.Digits.Count, 1);
        
        for (int i = 0; i < digitCount; i++)
        {
            var digit = row.GetDigit(i);
            
            if (digit == "Floor No.")
            {
                unitNumber += floor.ToString();
            }
            else if (digit == "Unit No.")
            {
                // Format unit number with appropriate padding
                if (i == 1) // Second digit typically gets 2-digit padding
                    unitNumber += unit.ToString("D2");
                else
                    unitNumber += unit.ToString();
            }
            else if (digit == "Custom")
            {
                var customValue = row.GetCustomDigit(i);
                if (!string.IsNullOrEmpty(customValue))
                {
                    unitNumber += customValue;
                }
            }
            else if (digit == " ")
            {
                unitNumber += " ";
            }
            else if (!string.IsNullOrEmpty(digit))
            {
                unitNumber += digit;
            }
        }
        
        // Don't pad with zeros if we have a meaningful unit number
        return string.IsNullOrEmpty(unitNumber) ? "000" : unitNumber;
    }

}

