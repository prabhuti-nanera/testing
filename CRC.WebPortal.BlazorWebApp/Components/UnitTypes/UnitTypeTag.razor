@using CRC.WebPortal.BlazorWebApp.Services
@using CRC.WebPortal.BlazorWebApp.Models
@using CRC.WebPortal.Shared.Dtos

<div class="unit-type-tag" @onmouseenter="OnMouseEnter" @onmouseleave="OnMouseLeave">
    @if (IsEditing)
    {
        <input type="text" 
               @bind="EditingName" 
               @onblur="SaveEdit" 
               @onkeypress="OnKeyPress"
               class="unit-type-input"
               @ref="inputElement" />
    }
    else
    {
        <span class="unit-type-name">@UnitType.Name</span>
    }
    
    @if (IsHovered)
    {
        <div class="unit-type-actions">
            <button type="button" 
                    class="btn-edit" 
                    @onclick="StartEdit"
                    title="Rename">
                <i class="bi bi-pencil"></i>
            </button>
            <button type="button" 
                    class="btn-delete" 
                    @onclick="DeleteUnitType"
                    title="Remove">
                <i class="bi bi-x"></i>
            </button>
        </div>
    }
</div>

@code {
    [Parameter] public UnitTypeDto UnitType { get; set; } = new();
    [Parameter] public EventCallback<UnitTypeDto> OnEdit { get; set; }
    [Parameter] public EventCallback<UnitTypeDto> OnDelete { get; set; }

    private bool IsHovered = false;
    private bool IsEditing = false;
    private string EditingName = string.Empty;
    private ElementReference inputElement;

    private void OnMouseEnter()
    {
        IsHovered = true;
    }

    private void OnMouseLeave()
    {
        IsHovered = false;
    }

    private async Task StartEdit()
    {
        IsEditing = true;
        EditingName = UnitType.Name;
        StateHasChanged();
        await Task.Delay(10); // Small delay to ensure element is rendered
        await inputElement.FocusAsync();
    }

    private async Task SaveEdit()
    {
        if (!string.IsNullOrWhiteSpace(EditingName) && EditingName != UnitType.Name)
        {
            var updatedUnitType = new UnitTypeDto
            {
                Id = UnitType.Id,
                Name = EditingName.Trim(),
                Description = UnitType.Description,
                DisplayOrder = UnitType.DisplayOrder,
                ProjectId = UnitType.ProjectId
            };
            
            await OnEdit.InvokeAsync(updatedUnitType);
        }
        
        IsEditing = false;
        EditingName = string.Empty;
    }

    private async Task OnKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SaveEdit();
        }
        else if (e.Key == "Escape")
        {
            IsEditing = false;
            EditingName = string.Empty;
        }
    }

    private async Task DeleteUnitType()
    {
        await OnDelete.InvokeAsync(UnitType);
    }
}

