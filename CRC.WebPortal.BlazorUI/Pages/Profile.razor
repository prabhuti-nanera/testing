        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 2rem;
        font-weight: 700;
        text-transform: uppercase;
    }

    .profile-info h2 {
        margin: 0 0 10px 0;
        font-size: 2rem;
        font-weight: 600;
        color: #333;
    }

    .profile-email {
        margin: 0 0 15px 0;
        color: #666;
        font-size: 1.1rem;
    }

    .profile-status {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 20px;
