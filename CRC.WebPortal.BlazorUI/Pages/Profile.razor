@page "/profile"
@attribute [Authorize]
@using CRC.WebPortal.BlazorUI.Models
@inject IAuthService AuthService

<PageTitle>Profile - CRC WebPortal</PageTitle>

<div class="profile-container">
    <div class="profile-header">
        <h1>My Profile</h1>
        <p class="text-muted">Manage your account information</p>
    </div>

    @if (currentUser != null)
    {
        <div class="profile-content">
            <div class="profile-card">
                <div class="profile-avatar">
                    <div class="avatar-circle">
                        @GetInitials(currentUser.FirstName, currentUser.LastName)
                    </div>
                </div>
                
                <div class="profile-info">
                    <h2>@currentUser.FullName</h2>
                    <p class="profile-email">@currentUser.Email</p>
                    <span class="profile-status active">Active Account</span>
                </div>
            </div>

            <div class="profile-details">
                <div class="detail-section">
                    <h3>Personal Information</h3>
                    <div class="detail-grid">
                        <div class="detail-item">
                            <label>First Name</label>
                            <span>@currentUser.FirstName</span>
                        </div>
                        <div class="detail-item">
                            <label>Last Name</label>
                            <span>@currentUser.LastName</span>
                        </div>
                        <div class="detail-item">
                            <label>Email Address</label>
                            <span>@currentUser.Email</span>
                        </div>
                        <div class="detail-item">
                            <label>Account Status</label>
                            <span class="status-badge active">
                                @(currentUser.IsActive ? "Active" : "Inactive")
                            </span>
                        </div>
                    </div>
                </div>

                <div class="detail-section">
                    <h3>Account Actions</h3>
                    <div class="action-grid">
                        <button class="action-card" @onclick="EditProfile">
                            <div class="action-icon">‚úèÔ∏è</div>
                            <div class="action-content">
                                <h4>Edit Profile</h4>
                                <p>Update your personal information</p>
                            </div>
                        </button>
                        
                        <button class="action-card" @onclick="ChangePassword">
                            <div class="action-icon">üîí</div>
                            <div class="action-content">
                                <h4>Change Password</h4>
                                <p>Update your account password</p>
                            </div>
                        </button>
                        
                        <button class="action-card" @onclick="ViewSecurity">
                            <div class="action-icon">üõ°Ô∏è</div>
                            <div class="action-content">
                                <h4>Security Settings</h4>
                                <p>Manage your security preferences</p>
                            </div>
                        </button>
                        
                        <button class="action-card" @onclick="DownloadData">
                            <div class="action-icon">üì•</div>
                            <div class="action-content">
                                <h4>Download Data</h4>
                                <p>Export your account data</p>
                            </div>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p>Loading profile...</p>
        </div>
    }
    else
    {
        <div class="error-container">
            <p>Unable to load profile information.</p>
            <button class="btn btn-primary" @onclick="LoadProfile">Retry</button>
        </div>
    }
</div>

<style>
    .profile-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 30px;
    }

    .profile-header {
        margin-bottom: 40px;
    }

    .profile-header h1 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 10px;
    }

    .profile-content {
        display: grid;
        gap: 30px;
    }

    .profile-card {
        background: white;
        border-radius: 15px;
        padding: 40px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        display: flex;
        align-items: center;
        gap: 30px;
    }

    .profile-avatar {
        flex-shrink: 0;
    }

    .avatar-circle {
        width: 100px;
        height: 100px;
        border-radius: 50%;
